<form action="/recipes/<%= @recipe.id %>" method="post">
 <input type="hidden" name="_method" value="PATCH"><br>
  Recipe name: <input type="text" name="recipe[name]" value="<%= @recipe.name %>"><br>
  Recipe ingredients: <input type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients %>"><br>
  Recipe cooking time: <input type="text" name="recipe[cooking_time]" value="<%= @recipe.cooktime %>"><br>
  <input type="submit" value="Submit">
</form>

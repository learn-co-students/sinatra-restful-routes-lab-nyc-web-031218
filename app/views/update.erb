<form action="/recipes/<%= @recipe.id %>" method="post">
  Name: <input type="text" value="<%= @recipe.name %>" name="name">
  Ingredients: <input type="text" value="<%= @recipe.ingredients %>" name="ingredients">
  Cook Time: <input type="text" value="<%= @recipe.cook_time %>" name="cook_time">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="submit" id="submit">
</form>
